{
    "manifest_version": 3,
    "name": "PvLxHunfdayne@copyright",
    "version": "1.0",
    "description": "Một extension Chrome tưởng đơn giản nhưng không hề giản đơn.",
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon48.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon48.png"
    }
}