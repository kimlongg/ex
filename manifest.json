{
    "name": "My Extension",
    "description": "This is my extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "action": {},
    "icons": {},
    "host_permissions": [
        "activeTab"
    ],
    "content_security_policy": "script-src 'self' 'nonce-random_value'"
}